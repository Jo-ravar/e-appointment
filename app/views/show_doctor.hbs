        <!-- jQuery -->
        <script type="text/javascript">
            function f1(){
                var currentd= new Date();
                var today=currentd.getDay();
                var da = document.getElementById("day").value;
                var sd = 0;
                if(da>=today){
                    sd = da - today;
                }else{
                    sd = 7 - (today - da);
                }
               
                document.getElementById("sendDate").value = currentd +sd;
                 var arr =["sunday","monday","tuesday","wednesday","thursday","friday","saturday"];
                document.getElementById("sendDay").value = arr[da];
            }
        </script>
